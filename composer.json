{
    "name": "linna/auth-mapper-pgsql",
    "description": "Postgres mapper implementation of the authentication and authorization interfaces.",
    "keywords": [
        "php",
        "mapper",
        "postgres",
        "authentication",
        "authorization"
    ],
    "homepage": "https://github.com/linna",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Rapetti",
            "email": "sebastian.rapetti@tim.it"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-pgsql": "*"
    },
    "require-dev": {
        "infection/infection": ">=0.26",
        "phpstan/phpstan": ">=1.8",
        "phpunit/phpunit": ">=9.0",
        "linna/framework": "dev-data-mapper",
        "linna/db-dumps": ">=v0.28",
        "linna/auth-mapper-test-trait": ">=v0.3"
    },
    "autoload": {
        "psr-4": {
            "Linna\\": "src/Linna/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linna\\":  "tests/Linna/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
